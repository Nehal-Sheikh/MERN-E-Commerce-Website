extends ../layouts/main-layout.pug

//- here we are attaching in the styles section in the layout file
block styles                                                          
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

//- here we are attaching in the content section in the layout file
block content 
    main
        if errorMessage
            .user-message.user-message--error #{errorMessage}  
        form.login-form(action="/signup" method="POST")
            .form-control
                label(for="email") E-Mail
                input(type="email", name="email")#email                                   
                //- here name filed helps us to retriwnve data from the page

            .form-control
                label(for="password") Password
                input(type="password", name="password")#password

            .form-control
                label(for="confirmPassword") Password
                input(type="password", name="confirmPassword")#confirmPassword

            input(type="hidden" name="_csrf" value=csrfToken)
            button.btn(type="submit") Signup
